<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/diseÃ±oListaNegocios"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="15dp"
    card_view:cardBackgroundColor="#CCF6FF"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/negocioImagen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            card_view:shapeAppearance="@style/imagenredondeada"
            card_view:srcCompat="@drawable/usuario" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/negocioNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Nombre del negocio"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
            <TextView
                android:id="@+id/negocioCategoria"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Categoria de negocio"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:id="@+id/negocioMunicipio"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Municipio"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>